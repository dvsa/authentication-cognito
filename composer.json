{
  "name": "dvsa/authentication-cognito",
  "type": "library",
  "description": "A wrapper around the AWS SDK (Cognito)",
  "keywords": ["dvsa", "authentication", "cognito"],
  "license": "MIT",
  "authors": [
    {
      "name": "DVSA",
      "homepage": "https://www.gov.uk/government/organisations/driver-and-vehicle-standards-agency"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "aws/aws-sdk-php": "^3.288.1",
    "dvsa/contracts": "^1.1",
    "firebase/php-jwt": "^6.3",
    "guzzlehttp/guzzle": "^7.4.5",
    "guzzlehttp/psr7": "^2.4.5",
    "illuminate/collections": "^8.0 || ^11.0",
    "league/oauth2-client": "^2.6",
    "psr/cache": "^1.0 || ^3.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Dvsa\\Authentication\\Cognito\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dvsa\\Authentication\\Cognito\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "phpunit/phpunit": "^9.5.4"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra" : {
    "bamarni-bin": {
      "bin-links": true,
      "forward-command": true
    }
  }
}
